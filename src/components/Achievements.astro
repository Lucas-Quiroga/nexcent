<section class="achievements">
  <!-- Section heading -->
  <header class="achievements__header">
    <h2 class="achievements__title-wrapper">
      Helping a local <br />
      <span class="achievements__highlight">business reinvent itself</span>
    </h2>
    <p class="achievements__subtitle">
      We reached here with our hard work and dedication
    </p>
  </header>

  <!-- Counts -->
  <div class="achievements__counts">
    <!-- Row 1 -->
    <div class="achievements__row">
      <!-- Item 1 -->
      <article class="achievements__item">
        <img src="/icon1.png" alt="Members icon" class="achievements__icon" />
        <div class="achievements__details">
          <p class="achievements__number">2,245,341</p>
          <p class="achievements__label">Members</p>
        </div>
      </article>
      <!-- Item 2 -->
      <article class="achievements__item">
        <img src="/icon2.png" alt="Clubs icon" class="achievements__icon" />
        <div class="achievements__details">
          <p class="achievements__number">46,328</p>
          <p class="achievements__label">Clubs</p>
        </div>
      </article>
    </div>
    <!-- Row 2 -->
    <div class="achievements__row">
      <!-- Item 3 -->
      <article class="achievements__item">
        <img
          src="/icon3.png"
          alt="Event bookings icon"
          class="achievements__icon"
        />
        <div class="achievements__details">
          <p class="achievements__number">828,867</p>
          <p class="achievements__label">Event Bookings</p>
        </div>
      </article>
      <!-- Item 4 -->
      <article class="achievements__item">
        <img src="/icon4.png" alt="Payments icon" class="achievements__icon" />
        <div class="achievements__details">
          <p class="achievements__number">1,926,436</p>
          <p class="achievements__label">Payments</p>
        </div>
      </article>
    </div>
  </div>
</section>

<style>
  .achievements {
    height: 288px;
    width: 100%;
    background-color: var(--neutral-silver);
    display: flex;
    justify-content: space-around;
    align-items: center;
  }

  .achievements__header {
    display: flex;
    flex-direction: column;
    justify-content: start;
    width: 540px;
    height: 120px;
  }

  .achievements__title-wrapper {
    width: 408px;
    height: 88px;
  }

  .achievements__title-wrapper,
  .achievements__highlight {
    font-size: 34px;
    line-height: 44px;
    margin: 0;
    font-weight: bolder;
  }

  .achievements__highlight {
    color: var(--primary-color);
  }

  .achievements__subtitle {
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    color: #18191f;
    margin: 0;
    width: 100%;
  }

  .achievements__counts {
    width: 540px;
    height: 160px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }

  .achievements__row {
    width: 100%;
    height: 60px;
    display: flex;
    gap: 30px;
  }

  .achievements__item {
    display: flex;
    gap: 16px;
    width: 50%;
  }

  .achievements__icon {
    width: 48px;
    height: 48px;
  }

  .achievements__details {
    display: flex;
    flex-direction: column;
  }

  .achievements__number,
  .achievements__label {
    margin: 0;
  }

  .achievements__number {
    font-size: 28px;
    line-height: 36px;
    color: var(--neutral-d-grey);
    font-weight: bold;
  }

  .achievements__label {
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    color: var(--neutral-grey);
  }
</style>
