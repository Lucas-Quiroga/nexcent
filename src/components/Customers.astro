---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { Image } from "astro:assets";
import TestimonialImg from "../../public/testimonial.png";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="testimonial">
  <figure class="testimonial__image-wrapper">
    <Image
      class="testimonial__image"
      src={TestimonialImg}
      alt="Testimonial"
      loading={"lazy"}
    />
  </figure>
  <div class="testimonial__content">
    <div class="testimonial__quote">
      <p class="testimonial__text">
        {t("testimonial.text")}
      </p>
      <div class="testimonial__author">
        <p class="testimonial__name">{t("testimonial.author")}</p>
        <p class="testimonial__position">
          {t("testimonial.position")}
        </p>
      </div>
    </div>
    <aside class="testimonial__customers">
      <ul class="testimonial__customer-list">
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo1.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo2.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo3.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo4.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo5.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
        <li class="testimonial__customer-item">
          <img
            src="/clientlogo6.png"
            alt="logocliente"
            class="testimonial__customer-img"
            loading={"lazy"}
          />
        </li>
      </ul>
      <div class="testimonial__cta">
        <p class="testimonial__cta-text">{t("testimonial.cta")}</p>
        <button class="testimonial__cta-button">
          <img src="/arrowgreen.png" alt="arrowbutton" loading={"lazy"} />
        </button>
      </div>
    </aside>
  </div>
</section>

<style>
  .testimonial {
    height: 390px;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: var(--neutral-silver);
  }

  .testimonial__image {
    width: 326px;
    height: 326px;
    object-fit: cover;
  }

  .testimonial__content {
    width: 748px;
    height: 324px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .testimonial__quote {
    width: 748px;
    height: 244px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: start;
    gap: 16px;
  }

  .testimonial__text {
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    color: var(--neutral-grey);
    margin: 0;
  }

  .testimonial__author {
    display: flex;
    flex-direction: column;
    margin: 0;
    width: 100%;
    height: 60px;

    & p {
      margin: 0;
    }
  }

  .testimonial__name {
    font-size: 20px;
    line-height: 28px;
    color: var(--primary-color);
    font-weight: bolder;
  }

  .testimonial__position {
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    color: var(--neutral-l-grey);
  }

  .testimonial__customers {
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .testimonial__customer-list {
    display: flex;
    gap: 41px;
    width: 493px;
    height: 48px;
    padding: 0 0 0 0;
    justify-content: space-around;
    align-items: center;
    list-style: none;
    margin: 0;
  }

  .testimonial__customer-item {
    width: 48px;
    height: 48px;
    transition: transform 0.3s ease;
  }

  .testimonial__customer-item:hover {
    transform: scale(1.1);
  }

  .testimonial__customer-img {
    width: 48px;
    height: 48px;
    object-fit: cover;
  }

  .testimonial__cta {
    width: 100%;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .testimonial__cta-text {
    font-size: 20px;
    line-height: 28px;
    font-weight: bolder;
    color: var(--primary-color);
    margin: 0;
  }

  .testimonial__cta-button {
    width: 24px;
    height: 24px;
    background-color: transparent;
    border: none;
  }

  @media (max-width: 575px) {
    .testimonial {
      flex-direction: column;
      height: auto;
      gap: 24px;
      padding: 32px;
    }

    .testimonial__image-wrapper {
      width: 100%;
      height: auto;
      display: none;
    }

    .testimonial__image {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .testimonial__content {
      width: 100%;
      height: auto;
      gap: 6px;
      padding: 0 12px;
    }

    .testimonial__text {
      font-size: 16px;
      line-height: 24px;
    }

    .testimonial__quote {
      width: 100%;
      height: auto;
      gap: 16px;
    }

    .testimonial__author {
      width: 100%;
      height: auto;
      gap: 8px;
    }

    .testimonial__customers {
      width: 100%;
      height: auto;
      gap: 16px;
      display: flex;
      flex-direction: column;
    }

    .testimonial__customer-list {
      width: 100%;
      height: auto;
      gap: 0px;
      display: flex;
      flex-wrap: wrap;
    }

    .testimonial__customer-item {
      width: 48px;
      height: 48px;
    }
  }
</style>
