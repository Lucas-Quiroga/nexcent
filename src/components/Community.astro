---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../i18n/utils";
import { languages } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section class="community">
  <header class="community__header">
    <p class="community__intro">
      {
        t("community.intro")
          .split("<br />")
          .map((text: string) => <span>{text}</span>)
      }
    </p>
    <p class="community__title">{t("community.title")}</p>
  </header>
  <ul class="community__list">
    <li class="community__item">
      <div class="community__item-header">
        <img
          src="/community1.png"
          alt="Community member 1"
          class="community__image"
        />
        <p class="community__category">{t("community.category1")}</p>
        <p class="community__subcategory">{t("community.subcategory1")}</p>
      </div>

      <p class="community__description">
        {t("community.description1")}
      </p>
    </li>
    <li class="community__item">
      <div class="community__item-header">
        <img
          src="/community2.png"
          alt="Community member 2"
          class="community__image"
        />
        <p class="community__category">{t("community.category2")}</p>
        <p class="community__subcategory">{t("community.subcategory2")}</p>
      </div>

      <p class="community__description">
        {t("community.description2")}
      </p>
    </li>
    <li class="community__item">
      <div class="community__item-header">
        <img
          src="/community3.png"
          alt="Community member 3"
          class="community__image"
        />
        <p class="community__category">{t("community.category3")}</p>
        <p class="community__subcategory">{t("community.subcategory3")}</p>
      </div>

      <p class="community__description">
        {t("community.description3")}
      </p>
    </li>
  </ul>
</section>

<style>
  .community {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    height: auto;
    width: 100%;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    gap: 16px;
  }

  .community__header {
    text-align: center;
    height: 120px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .community__intro {
    font-size: 35px;
    line-height: 44px;
    color: var(--neutral-d-grey);
    font-weight: 600;
    margin: 0;
    width: 542px;
    height: 88px;
  }

  .community__title {
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    color: var(--neutral-grey);
    width: 100%;
    height: 24px;
    margin: 0;
  }

  .community__list {
    display: flex;
    gap: 2rem;
    width: 100%;
    margin: 0;
    height: 280px;
    margin: 10px 0;
    box-sizing: border-box;
    justify-content: space-around;
    align-items: center;
    padding: 0 0 0 0;
  }

  .community__item {
    width: 299px;
    height: auto;
    padding: 24px 32px;
    list-style: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    border-radius: 8px;
    box-sizing: border-box;
  }

  .community__item-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 267px;
    height: 144px;
  }

  .community__image {
    width: 65px;
    height: 56px;
  }

  .community__category,
  .community__subcategory {
    font-size: 28px;
    line-height: 36px;
    color: var(--neutral-d-grey);
    margin: 0;

    font-weight: bold;
  }

  .community__description {
    width: 251px;
    height: 60px;
    color: var(--neutral-grey);
    font-size: var(--font-size-body3);
    line-height: var(--line-height-body3);
    text-align: center;
  }

  @media (max-width: 575px) {

    .community {
      padding: 0 12px;
    }

    .community__intro {
      font-size: 30px;
      line-height: 36px;
      width: auto;
    }

    .community__title{
      font-size: 16px;
      line-height: 24px;
    }

    .community__list {
      flex-direction: column;
      gap: 20px;
      height: auto;
    }

</style>
