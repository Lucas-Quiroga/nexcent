    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .feature__image {
    width: 441.53px;
    height: 328.99px;
    object-fit: cover;
  }

  .feature__content {
    width: 661px;
    height: 268px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 32px;
    margin: 0;
  }

  .feature__text {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 601px;
    height: 182px;
    margin-right: auto;
  }

  .feature__headline {
    font-size: 36px;
    line-height: 44px;
    font-weight: bolder;
    color: var(--neutral-d-grey);
    margin: 0;
  }

  .feature__description {
    font-size: var(--font-size-body3);
    line-height: var(--line-height-body3);
    color: var(--neutral-grey);
    margin: 0;
  }

  .feature__button {
    background-color: var(--primary-color);
    color: var(--neutral-white);
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
