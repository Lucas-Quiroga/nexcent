---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="footer">
  <div class="footer__cta">
    <p class="footer__cta-text">{t("footer.cta")}</p>
    <button class="footer__cta-button">
      {t("footer.button")}
      <img
        src="/whitearrow.png"
        alt="Arrow icon"
        class="footer__cta-icon"
        loading="lazy"
      />
    </button>
  </div>
  <div class="footer__content">
    <!-- Company info -->
    <div class="footer__company">
      <img
        src="/logofooter.png"
        alt="Nexcent logo"
        class="footer__company-logo"
        loading="lazy"
      />

      <div class="footer__company-info">
        <p class="footer__company-copyright">
          {t("footer.copyright")}
        </p>
        <p class="footer__company-rights">
          {t("footer.privacy")}
        </p>
      </div>
      <!-- Social links -->
      <div class="footer__social">
        <img
          src="/instagram.png"
          alt="Instagram"
          class="footer__social-icon"
          loading="lazy"
        />
        <img
          src="/dribble.png"
          alt="Dribbble"
          class="footer__social-icon"
          loading="lazy"
        />
        <img
          src="/twitter.png"
          alt="Twitter"
          class="footer__social-icon"
          loading="lazy"
        />
        <img
          src="/youtube.png"
          alt="YouTube"
          class="footer__social-icon"
          loading="lazy"
        />
      </div>
    </div>
    <!-- Links -->
    <div class="footer__links">
      <div class="footer__links-group">
        <p class="footer__links-title">
          {t("footer.linksTitle1")}
        </p>
        <ul class="footer__links-list">
          <li class="footer__links-item">
            {t("footer.link1")}
          </li>
          <li class="footer__links-item">
            {t("footer.link2")}
          </li>
          <li class="footer__links-item">
            {t("footer.link3")}
          </li>
          <li class="footer__links-item">
            {t("footer.link4")}
          </li>
          <li class="footer__links-item">
            {t("footer.link5")}
          </li>
        </ul>
      </div>
      <div class="footer__links-group">
        <p class="footer__links-title">
          {t("footer.linksTitle2")}
        </p>
        <ul class="footer__links-list">
          <li class="footer__links-item">
            {t("footer.link6")}
          </li>
          <li class="footer__links-item">
            {t("footer.link7")}
          </li>
          <li class="footer__links-item">
            {t("footer.link8")}
          </li>
          <li class="footer__links-item">
            {t("footer.link9")}
          </li>
          <li class="footer__links-item">
            {t("footer.link10")}
          </li>
        </ul>
      </div>
      <div class="footer__subscribe">
        <p class="footer__subscribe-title">
          {t("footer.subscribe")}
        </p>
        <input
          type="email"
          placeholder={t("footer.placeholder")}
          class="footer__subscribe-input"
        />
        <img
          src="/essential.png"
          alt="send-icon"
          class="footer__subscribe-img"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    height: 628px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 5rem;
  }

  .footer__cta {
    height: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--neutral-silver);
    width: 100%;
    padding: 32px 0;
    gap: 32px;
  }

  .footer__cta-text {
    font-size: 64px;
    line-height: 76px;
    font-weight: 600;
    color: var(--neutral-black);
    margin: 0;
    width: 887px;
    height: 152px;
    text-align: center;
  }

  .footer__cta-button {
    background-color: var(--primary-color);
    color: var(--neutral-white);
    font-size: var(--font-size-body2);
    line-height: var(--line-height-body2);
    width: 178px;
    height: 52px;
    border-radius: 4px;
    display: flex;
    gap: 8px;
    align-items: center;
    border: none;
    padding: 14px 32px;
    cursor: pointer;
  }

  .footer__cta-button:hover {
    background-color: #39883c;
  }

  .footer__content {
    width: 100%;
    height: 328px;
    display: flex;
    background-color: var(--neutral-black);
    gap: 125px;
    justify-content: center;
    align-items: center;
    padding: 64px 165px;
  }

  .footer__company {
    display: flex;
    flex-direction: column;
    width: 350px;
    height: 189.67px;
    align-items: start;
    justify-content: space-between;
  }

  .footer__company-logo {
    width: 191px;
    height: 29.67px;
  }

  .footer__company-info {
    display: flex;
    flex-direction: column;
    margin: 0;
  }

  .footer__company-copyright,
  .footer__company-rights {
    font-size: var(--font-size-body3);
    line-height: var(--line-height-body3);
    color: var(--neutral-silver);
    margin: 0;
    width: 350px;
    height: 20px;
  }

  .footer__social {
    width: 176px;
    height: 32px;
    display: flex;
    justify-content: space-between;
  }

  .footer__social-icon {
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .footer__social-icon:hover {
    transform: scale(1.1);
  }

  .footer__links {
    width: 635px;
    height: 200px;
    display: flex;
    gap: 30px;
    justify-content: space-between;
  }

  .footer__links-group {
    display: flex;
    flex-direction: column;
    gap: 24px;
    justify-content: end;
    align-items: start;
    margin: 0;
  }

  .footer__links-title,
  .footer__subscribe-title {
    font-size: 20px;
    line-height: 28px;
    font-weight: 600;
    color: var(--neutral-white);
    margin: 0;
  }

  .footer__links-item {
    cursor: pointer;
  }

  .footer__links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    color: var(--neutral-white);
  }

  .footer__subscribe {
    display: flex;
    flex-direction: column;
    gap: 12px;
    position: relative;
  }

  .footer__subscribe-input {
    width: 255px;
    height: 40px;
    border-radius: 10px;
    background-color: var(--neutral-grey);
    border: none;
    padding: 12px 16px;
  }

  .footer__subscribe-input::placeholder {
    font-size: var(--font-size-body3);
    line-height: var(--line-height-body3);
    color: var(--neutral-silver);
    width: 126px;
    height: 20px;
  }

  .footer__subscribe-img {
    width: 18px;
    height: 18px;
    cursor: pointer;
    position: absolute;
    top: 26%;
    right: 10px;
  }

  @media (max-width: 575px) {
    .footer {
      height: auto;
      margin-top: 2rem;
    }

    .footer__cta {
      height: auto;
      padding: 24px 32px;
      gap: 24px;
    }

    .footer__cta-text {
      font-size: 24px;
      line-height: 28px;
      width: auto;
      height: auto;
    }

    .footer__cta-button {
      font-size: 16px;
      line-height: 20px;
      width: 100%;
      height: 40px;
      padding: 8px 16px;
      text-align: center;
      display: flex;
      justify-content: center;
    }

    .footer__content {
      height: auto;
      flex-direction: column;
      gap: 24px;
      padding: 24px 12px;
    }

    .footer__company {
      width: 100%;
      height: auto;
      gap: 24px;
      align-items: center;
    }

    .footer__company-logo {
      width: 300px;
      height: 46.67px;
      object-fit: contain;
    }

    .footer__company-info {
      width: 100%;
      height: auto;
      gap: 24px;
      align-items: center;
    }

    .footer__company-copyright,
    .footer__company-rights {
      width: auto;
      height: auto;
    }

    .footer__social {
      width: 100%;
      height: auto;
      justify-content: center;
      gap: 16px;
    }

    .footer__links {
      width: 100%;
      height: auto;
      flex-direction: column;
      gap: 24px;
    }

    .footer__links-group {
      width: 100%;
      height: auto;
      gap: 16px;
      align-items: center;
    }

    .footer__links-title,
    .footer__subscribe-title {
      width: auto;
      height: auto;
    }

    .footer__links-list {
      width: 100%;
      height: auto;
      gap: 8px;
      margin: auto;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .footer__subscribe {
      width: 100%;
      height: auto;
      gap: 8px;
      padding: 0 32px;
    }

    .footer__subscribe-img {
      display: none;
    }

    .footer__subscribe-input {
      width: 100%;
      height: 40px;
      padding: 8px 16px;
    }

    .footer__subscribe-input::placeholder {
      width: auto;
      height: auto;
    }
  }
</style>
